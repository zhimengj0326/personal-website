  <script>
    // 智能地图显示处理
    document.addEventListener('DOMContentLoaded', function() {
      const iframe = document.querySelector('iframe');
      const fallbackMap = document.getElementById('fallback-map');
      
      // 立即显示备用地图，因为ClustrMaps iframe通常会有问题
      if (fallbackMap) {
        fallbackMap.style.display = 'block';
      }
      
      // 检查iframe是否加载成功
      if (iframe) {
        // 尝试检测iframe是否真正加载了内容
        const checkIframeContent = () => {
          try {
            // 检查iframe是否有内容且不是错误页面
            if (iframe.contentDocument && 
                iframe.contentDocument.body && 
                !iframe.contentDocument.body.innerHTML.includes('refused to connect') &&
                !iframe.contentDocument.body.innerHTML.includes('404')) {
              // iframe真正加载成功，隐藏备用地图
              if (fallbackMap) {
                fallbackMap.style.display = 'none';
              }
              return true;
            }
          } catch (e) {
            // 跨域错误，说明iframe没有真正加载
            console.log('Iframe cross-origin error, showing fallback map');
          }
          return false;
        };
        
        // 监听iframe加载事件
        iframe.addEventListener('load', function() {
          // 延迟检查，确保内容真正加载
          setTimeout(checkIframeContent, 1000);
        });
        
        // 监听iframe错误事件
        iframe.addEventListener('error', function() {
          console.log('Iframe error, showing fallback map');
          if (fallbackMap) {
            fallbackMap.style.display = 'block';
          }
        });
        
        // 设置超时检查
        setTimeout(function() {
          if (!checkIframeContent()) {
            // 如果iframe没有真正加载成功，显示备用地图
            if (fallbackMap) {
              fallbackMap.style.display = 'block';
            }
          }
        }, 2000); // 2秒后检查
      }
    });
  </script>
